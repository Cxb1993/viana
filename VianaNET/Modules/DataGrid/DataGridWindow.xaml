<ad:DockableContent
    x:Class="VianaNET.DataGridWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 	  xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
    xmlns:Viana="clr-namespace:VianaNET"
    xmlns:WPFToolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:lex="http://schemas.root-project.org/xaml/presentation"
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    lex:LocalizeDictionary.DesignCulture="de"
    Title="{lex:LocText VianaNET:Labels:DatagridWindowTitle}"
    DockableStyle="Dockable" 
	Height="418" Width="770">
  <ad:DockableContent.Resources>
    <ResourceDictionary Source="../../VianaControls/VianaStyle.xaml"/>
  </ad:DockableContent.Resources>
  <ad:DockableContent.Icon>
    <Image Source="..\..\Images\Datagrid16.png" Height="16" Width="16"/>
  </ad:DockableContent.Icon>
  <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    <WPFToolkit:DataGrid 
    AutoGenerateColumns="False" 
    Name="dataGrid"
    Background="{Binding Path=GradientBackground, Source={x:Static Viana:Calibration.Instance}}"
    ItemsSource="{Binding Path=Samples, Source={x:Static Viana:VideoData.Instance}}" HorizontalGridLinesBrush="Gray" VerticalGridLinesBrush="Gray" RowHeaderWidth="20" AlternationCount="1" CanUserDeleteRows="False">
      <WPFToolkit:DataGrid.Columns>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridFramenumber}" 
                   Binding="{Binding Framenumber, StringFormat=N0}"    
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource CenterAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="Framenumber"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridTimestamp}" 
                   Binding="{Binding 
        Path=Timestamp, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource TimeMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="Timestamp"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridXCoordinate}" 
                    Binding="{Binding 
        Path=CoordinateX, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource PixelMeasurement}}"
                  HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="CoordinateX"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridYCoordinate}" 
                    Binding="{Binding 
        Path=CoordinateY, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource PixelMeasurement}}"
                  HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="CoordinateY"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridDistance}" 
                   Binding="{Binding 
        Path=Distance, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource PositionMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="Distance"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridXDistance}" 
                   Binding="{Binding 
        Path=DistanceX, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource PositionMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="DistanceX"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridYDistance}" 
                   Binding="{Binding 
        Path=DistanceY, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource PositionMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="DistanceY"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridVelocity}" 
                   Binding="{Binding 
        Path=Velocity, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource VelocityMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="Velocity"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridXVelocity}" 
                   Binding="{Binding 
        Path=VelocityX, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource VelocityMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="VelocityX"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridYVelocity}" 
                   Binding="{Binding 
        Path=VelocityY, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource VelocityMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="VelocityY"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridAcceleration}" 
                   Binding="{Binding 
        Path=Acceleration, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource AccelerationMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="Acceleration"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridXAcceleration}" 
                   Binding="{Binding 
        Path=AccelerationX, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource AccelerationMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="AccelerationX"/>
        <WPFToolkit:DataGridTextColumn
                   Header="{lex:LocText VianaNET:Labels:DataGridYAcceleration}" 
                   Binding="{Binding 
        Path=AccelerationY, 
        Converter={StaticResource UnitDoubleStringConverter}, 
        ConverterParameter={StaticResource AccelerationMeasurement}}"
                   HeaderStyle="{StaticResource CenterAlignedColumnHeaderStyle}"
                   CellStyle="{StaticResource RightAlignedCellStyle}"
                   CanUserReorder="True"
                   IsReadOnly="True"
                   CanUserSort="True"
                   SortMemberPath="AccelerationY"/>
      </WPFToolkit:DataGrid.Columns>
    </WPFToolkit:DataGrid>
  </ScrollViewer>
</ad:DockableContent>
