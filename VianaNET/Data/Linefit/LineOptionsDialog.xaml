<Window x:Class="VianaNET.LineOptionsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Viana="clr-namespace:VianaNET"
    xmlns:lex="http://schemas.root-project.org/xaml/presentation"
    lex:LocalizeDictionary.DesignCulture="de"
    Name="lineOptionsDialog" WindowStartupLocation="CenterScreen"
    Icon="/VianaNET;component/Images/VianaNET.ico" 
    Height="304" Width="336" MinWidth="0" WindowStyle="ThreeDBorderWindow"
    Title="{lex:LocText VianaNET:Labels:LineOptionsDialogTopTitle}" >
    <Window.Resources>
        <ResourceDictionary Source="/VianaNET;component/CustomStyles/Styles/VianaStyle.xaml"/>
    </Window.Resources>
   
        <Grid Background="{StaticResource MainBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Viana:TopFrame x:Name="topFrame" Title="{lex:LocText VianaNET:Labels:LineOptionsDialogTitle}"/>

        <TabControl Grid.Row="1" Name="tabControl1" Height="100" Background="{StaticResource MainBackgroundBrush}">
                <TabItem Header="Ausgleichskurve" Name="tabItem1" IsSelected="True">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label  Grid.Row="0" Name="labelA2" Content="Liniendicke" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <Slider Grid.Column="1" HorizontalAlignment="Stretch" Name="sliderLinienDickeA" VerticalAlignment="Center" TickPlacement="Both" Value="1" Margin="8,4" 
                            ValueChanged="sliderLinienDickeA_ValueChanged" TickFrequency="0.2" Maximum="5" SmallChange="0.2" IsSnapToTickEnabled="True" />
                    <Label  Grid.Row="1" Name="labelFarbeA" Content="Farbe Regress" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <Grid Grid.Row="1" Grid.Column="1" Height="30" Width="220">
                        <Border Name="borderR1" Height="22" Width="10" Margin="4,0"   Background="Black"   BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderR_MouseDown"/>
                        <Border Name="borderR2" Height="22" Width="10" Margin="24,0"  Background="Gray"    BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderR_MouseDown"/>
                        <Border Name="borderR3" Height="22" Width="10" Margin="44,0"  Background="Silver"  BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderR_MouseDown"/>
                        <Border Name="borderR4" Height="22" Width="10" Margin="64,0"  Background="Red"     BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderR_MouseDown"/>
                        <Border Name="borderR5" Height="22" Width="10" Margin="84,0"  Background="HotPink" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderR_MouseDown" />
                        <Border Name="borderR6" Height="22" Width="10" Margin="104,0" Background="Lime"    BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderR_MouseDown"/>
                        <Border Name="borderR7" Height="22" Width="10" Margin="84,0" Background="Green"    BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center"  MouseDown="borderR_MouseDown"/>
                        <Border Name="borderR8" Height="22" Width="10" Margin="64,0" Background="Blue"     BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" MouseDown="borderR_MouseDown"/>
                        <Border Name="borderR9" Height="22" Width="10" Margin="44,0" Background="Gold"     BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" MouseDown="borderR_MouseDown"/>
                        <Border Name="borderR10" Height="22" Width="10" Margin="24,0" Background="Yellow"  BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" MouseDown="borderR_MouseDown"/>
                        <Border Name="borderR11" Height="22" Width="10" Margin="4,0" Background="BlueViolet" BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" MouseDown="borderR_MouseDown"/>
                    </Grid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Theorie Graph" Name="tabItem2">
            <Grid >
                 <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label  Grid.Row="0" Name="label2" Content="Liniendicke" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Slider Grid.Column="1" HorizontalAlignment="Stretch" Name="sliderLinienDickeT" VerticalAlignment="Center" Minimum="1" TickPlacement="Both" Value="1" Margin="8,4"
                        ValueChanged="sliderLinienDickeT_ValueChanged" TickFrequency="0.2" Maximum="5" SmallChange="0.2" IsSnapToTickEnabled="True" />
                <Label  Grid.Row="1" Name="labelFarbeT" Content="Farbe Theorie" HorizontalAlignment="Center" VerticalAlignment="Center" />
                   
                <Grid Grid.Row="1" Grid.Column="1" Height="30" Width="220">
                    <Border Name="borderT1" Height="22" Width="10" Margin="4,0"   Background="Black"   BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    <Border Name="borderT2" Height="22" Width="10" Margin="24,0"  Background="Gray"    BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    <Border Name="borderT3" Height="22" Width="10" Margin="44,0"  Background="Silver"  BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    <Border Name="borderT4" Height="22" Width="10" Margin="64,0"  Background="Red"     BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    <Border Name="borderT5" Height="22" Width="10" Margin="84,0"  Background="HotPink" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    <Border Name="borderT6" Height="22" Width="10" Margin="104,0" Background="Lime"    BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    <Border Name="borderT7" Height="22" Width="10" Margin="84,0" Background="Green"    BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    <Border Name="borderT8" Height="22" Width="10" Margin="64,0" Background="Blue"     BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" MouseDown="borderT_MouseDown" />
                    <Border Name="borderT9" Height="22" Width="10" Margin="44,0" Background="Gold"     BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    <Border Name="borderT10" Height="22" Width="10" Margin="24,0" Background="Yellow"  BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    <Border Name="borderT11" Height="22" Width="10" Margin="4,0" Background="BlueViolet" BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" MouseDown="borderT_MouseDown"/>
                    </Grid>
                </Grid>
            </TabItem> 
        </TabControl>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="gültige Stellen" Grid.Row="0" HorizontalAlignment="Left" Name="label4" VerticalAlignment="Center" Margin="4" Padding="1" />
                <Label Content="0,01234567890" Grid.Row="1" HorizontalAlignment="Left" Name="labelBeispiel" VerticalAlignment="Center" Margin="4" Padding="1" />
                <Slider Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Stretch" Margin="8,0,8,0" Name="sliderGenauigkeit" VerticalAlignment="Center" ValueChanged="sliderGenauigkeit_ValueChanged" SmallChange="1" TickPlacement="Both" IsSnapToTickEnabled="True" Value="4" />
            </Grid>
            <Button Name="OK"  Grid.Row="3" HorizontalAlignment="Left" Margin="124,0,0,0" Height="23" Width="80" IsDefault="True" Content="{lex:LocText VianaNET:Labels:OK}" Click="OK_Click" />
            <Button Name="Cancel" Grid.Row="3" HorizontalAlignment="Right" Margin="0,0,20,0" Height="23" Width="80" IsDefault="False" Content="{lex:LocText VianaNET:Labels:Cancel}" Click="Cancel_Click" />
       </Grid>
</Window>
