    <ContentControl x:Name="ContentContainer" Margin="3" DockPanel.Dock="Bottom">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ad:DockingManager x:Name="dockingManager" Grid.Row="0">
          <ad:DockablePane x:Name="modulePane" RequestBringIntoView="modulePane_RequestBringIntoView" ShowHeader="False"/>
        </ad:DockingManager>
        <StatusBar VerticalAlignment="Bottom" Grid.Row="1">
          <StatusBarItem>
            <Label Content="{Binding Path=StatusLabel,
              Source={x:Static Viana:StatusBarContent.Instance}}"/>
          </StatusBarItem>
          <StatusBarItem>
            <ProgressBar Width="120" Height="20" Value="{Binding Path=ProgressBarValue,
              Source={x:Static Viana:StatusBarContent.Instance}}"/>
          </StatusBarItem>
          <StatusBarItem HorizontalAlignment="Right">
            <Label Content="{Binding Path=MessagesLabel,
              Source={x:Static Viana:StatusBarContent.Instance}}"/>
          </StatusBarItem>
        </StatusBar>
      </Grid>
    </ContentControl>
  </DockPanel>
</r:RibbonWindow>
