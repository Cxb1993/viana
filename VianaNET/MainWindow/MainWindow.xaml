        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupPrepareLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonGroup.GroupSizeDefinitions>
            <r:RibbonGroupSizeDefinitionCollection>
              <r:RibbonGroupSizeDefinition>
                <r:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                <r:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
              </r:RibbonGroupSizeDefinition>
            </r:RibbonGroupSizeDefinitionCollection>
          </r:RibbonGroup.GroupSizeDefinitions>
          <r:RibbonButton Command="{StaticResource ButtonCalibrateVideo}" />
          <r:RibbonButton Command="{StaticResource ButtonManualDataAquisition}" />
          <r:RibbonButton Command="{StaticResource ButtonChooseAutomaticAnalysis}" />
        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupWindowsLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonGroup.GroupSizeDefinitions>
            <r:RibbonGroupSizeDefinitionCollection>
              <r:RibbonGroupSizeDefinition>
                <r:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                <r:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                <r:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
              </r:RibbonGroupSizeDefinition>
            </r:RibbonGroupSizeDefinitionCollection>
          </r:RibbonGroup.GroupSizeDefinitions>
          <r:RibbonButton Command="{StaticResource ButtonVideoWindow}" />
          <r:RibbonButton Command="{StaticResource ButtonDatagridWindow}" />
          <r:RibbonButton Command="{StaticResource ButtonChartWindow}" />
        </r:RibbonGroup>

      </r:RibbonTab>
      <r:RibbonTab x:Name="RibbonTabAnalysis" Label="{lex:LocText VianaNET:Labels:RibbonTabAnalysisLabel}">
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupManualAquisitionLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonButton Command="{StaticResource ButtonManualDataAquisition}" />
        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupAutomaticAquisitionLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonGroup.GroupSizeDefinitions>
            <r:RibbonGroupSizeDefinitionCollection>
              <r:RibbonGroupSizeDefinition>
                <r:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                <r:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                <r:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                <r:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
              </r:RibbonGroupSizeDefinition>
            </r:RibbonGroupSizeDefinitionCollection>
          </r:RibbonGroup.GroupSizeDefinitions>
          <r:RibbonButton Name="selectColorRibbonButton" Command="{StaticResource ButtonSelectColor}" />
          <r:RibbonButton Command="{StaticResource ButtonClipVideo}" />
          <r:RibbonButton Name="StartAutomaticAquisition" 
                          Command="{StaticResource ButtonAutomaticDataAquisition}" 
                          Visibility="{Binding Path=IsDataAcquisitionRunning,
            Source={x:Static Viana:Video.Instance},
            Converter={StaticResource BoolVisibleConverterInverse}}"/>
          <r:RibbonButton Name="StopAutomaticAquisition" Command="{StaticResource ButtonAutomaticDataAquisitionStop}" 
                          Visibility="{Binding Path=IsDataAcquisitionRunning,
              Source={x:Static Viana:Video.Instance},
              Converter={StaticResource BoolVisibleConverter}}" />
          <!--<r:RibbonButton Command="{StaticResource ButtonOtherOptions}" />-->
        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupVideoAutoDetectionOptionsLabelTitle}" />
          </r:RibbonGroup.Command>
          <Viana:RibbonSliderValue 
                                   Style="{StaticResource RibbonSliderValue}"
                                   MinWidth="100"
                                   Height="20"
                                   Minimum="0"
                                   Maximum="255"
                                   SliderDescription="{lex:LocText VianaNET:Labels:RibbonLabelAutoDetectionTolerance}"
                                   Value="{Binding Path=ColorTolerance, Source={x:Static Viana:Calibration.Instance}}" 
                                   SmallChange="1" 
                                   IsSnapToTickEnabled="True" />
          <Viana:RibbonSliderValue 
                                   Style="{StaticResource RibbonSliderValue}"
                                   Height="20"
                                   MinWidth="100"
                                   Minimum="1"
                                   Maximum="500"
                                   SliderDescription="{lex:LocText VianaNET:Labels:RibbonLabelAutoDetectionBlobMinDiameter}"
                                   Value="{Binding Path=BlobMinDiameter, Source={x:Static Viana:Calibration.Instance}}"
                                   SmallChange="1" 
                                   IsSnapToTickEnabled="True" />
          <Viana:RibbonSliderValue 
                                   Style="{StaticResource RibbonSliderValue}"
                                    Height="20"
                                  MinWidth="100"
                                   Minimum="1"
                                   Maximum="500"
                                   SliderDescription="{lex:LocText VianaNET:Labels:RibbonLabelAutoDetectionBlobMaxDiameter}"
                                   Value="{Binding Path=BlobMaxDiameter, Source={x:Static Viana:Calibration.Instance}}"
                                   SmallChange="1" 
                                   IsSnapToTickEnabled="True" />
        </r:RibbonGroup>

      </r:RibbonTab>

      <r:RibbonTab x:Name="RibbonTabVideo" Label="{lex:LocText VianaNET:Labels:RibbonTabVideoLabel}">
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupVideoShowWindowLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonButton Command="{StaticResource ButtonVideoWindow}" />
        </r:RibbonGroup>
        <r:RibbonGroup Name="VideoCaptureRibbonGroup" HasDialogLauncher="True" Command="{StaticResource ButtonVideoCaptureDeviceProperties}">
          <r:RibbonLabel Content="{lex:LocText VianaNET:Labels:RibbonVideoDevicesSelectDeviceLabelTitle}"/>
          <Viana:RibbonComboBoxSimple x:Name="VideoInputDeviceCombo" IsEditable="False" IsReadOnly="False" />
          <!--ItemsSource="{Binding Source={x:Static WPFMediaKit:MultimediaUtil.VideoInputDevices}}"
            SelectedItem="{Binding Mode=OneWayToSource, Path=VideoCapturerElement.VideoCaptureDevice ,Source={x:Static Viana:Video.Instance}}"
            DisplayMemberPath="Name"
            SelectedIndex="0"/>-->

          <r:RibbonButton Margin="20,0,0,0" Command="{StaticResource ButtonVideoCaptureDeviceProperties}" />
        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupVideoCalibrationOptionsLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonCheckBox Name="ShowCalibrationCheckbox"  Command="{StaticResource CalibrationOptionsShowCalibration}" IsEnabled="{Binding Path=IsVideoCalibrated, Source={x:Static Viana:Calibration.Instance}}" IsChecked="True"/>
          <r:RibbonCheckBox Name="ShowClipRegionCheckbox"  Command="{StaticResource CalibrationOptionsShowClipRegion}" IsEnabled="{Binding Path=HasClipRegion, Source={x:Static Viana:Calibration.Instance}}" IsChecked="True"/>
        </r:RibbonGroup>
      </r:RibbonTab>
      <r:RibbonTab x:Name="RibbonTabDatagrid" Label="{lex:LocText VianaNET:Labels:RibbonTabDatagridLabel}">
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupDatagridShowWindowLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonButton Command="{StaticResource ButtonDatagridWindow}" />
        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupDatagridExportLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonButton Command="{StaticResource ButtonExportDataToTxt}" />
          <r:RibbonButton Command="{StaticResource ButtonExportDataToCsv}" />
          <r:RibbonButton Command="{StaticResource ButtonExportDataToXml}" />
          <r:RibbonButton Command="{StaticResource ButtonExportDataToXls}" />
        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupDatagridUpdateDataLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonButton Command="{StaticResource ButtonDeleteData}" />
          <r:RibbonButton Command="{StaticResource ButtonCalculateVelocity}" />
        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupDatagridOptionsLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonCheckBox Name="DisplayUnitsCheckbox" Command="{StaticResource DatagridDisplayUnits}" IsChecked="{Binding Path=IsShowingUnits, Source={x:Static Viana:Calibration.Instance}}"/>
        </r:RibbonGroup>
      </r:RibbonTab>
      <r:RibbonTab x:Name="RibbonTabChart" Label="{lex:LocText VianaNET:Labels:RibbonTabChartLabel}">
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupChartShowWindowLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonButton Command="{StaticResource ButtonChartWindow}" />
        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupChartExportLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonButton Command="{StaticResource ButtonExportChartToClipboard}" />
          <r:RibbonButton Command="{StaticResource ButtonExportChartToFile}" />
          <r:RibbonButton Command="{StaticResource ButtonExportChartToWord}" />
        </r:RibbonGroup>
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupChartOptionsLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonButton Command="{StaticResource ChartDisplayOptions}"/>
        </r:RibbonGroup>
      </r:RibbonTab>
