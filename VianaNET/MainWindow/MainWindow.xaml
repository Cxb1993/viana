            <r:RibbonComboBoxItem Content="Deutsch" IsSelected="True"></r:RibbonComboBoxItem>
            <r:RibbonComboBoxItem Content="English"></r:RibbonComboBoxItem>
          </r:RibbonComboBox>
        </r:RibbonGroup>
        <!--<r:RibbonGroup>
                    <r:RibbonGroup.Command>
                        <r:RibbonCommand LabelTitle="Layout" />
                    </r:RibbonGroup.Command>
                    <r:RibbonButton Command="{StaticResource SaveLayout}" />
                    <r:RibbonButton Command="{StaticResource RestoreLayout}" />
                </r:RibbonGroup>-->
        <r:RibbonGroup>
          <r:RibbonGroup.Command>
            <r:RibbonCommand LabelTitle="{lex:LocText VianaNET:Labels:RibbonGroupStyleLabelTitle}" />
          </r:RibbonGroup.Command>
          <r:RibbonButton Command="{StaticResource ButtonChangeColorScheme}" />
          <r:RibbonButton Command="{StaticResource ButtonResetColorScheme}" />
